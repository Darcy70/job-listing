<div class="col-md-10 col-md-offset-1 job-content">
  <div class="row">
    <div class="col-md-12 btn-group select-job-box">
      <!--=== By location ====-->
      <div class="dropdown btn-group clearfix">
        <% if params[:location].present? %>
        <button type="button" class="btn btn-default dropdown-toggle" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expended="true">
          <%= params[:location] %> <span class="caret"></span>
        </button>
        <% else %>
        <button type="button" class="btn btn-default dropdown-toggle" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" >
          locations <span class="caret"></span>
        </button>
        <% end %>
        <ul class="dropdown-menu" selection aria-labelledby="dropdownMenuDivider">
          <% @locations.each do |location| %>
          <li><%= link_to(location.name, jobs_path(:location => location.name ))%></li>
          <% end %>
          <li><%= link_to("All Locations", jobs_path(location: "All Locations"))%></li>
        </ul>
      </div>
      <!--=== By category ====-->
      <div class="dropdown btn-group clearfix">
        <% if params[:category].present? %>
        <button type="button" class="btn btn-default dropdown-toggle" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expended="true">
          <%= params[:category] %> <span class="caret"></span>
        </button>
        <% else %>
        <button type="button" class="btn btn-default dropdown-toggle" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" >
          Categories <span class="caret"></span>
        </button>
        <% end %>
        <ul class="dropdown-menu" selection aria-labelledby="dropdownMenuDivider">
          <% @categorys.each do |category| %>
          <li><%= link_to(category.name, jobs_path(:category => category.name ))%></li>
          <% end %>
          <li><%= link_to("All Categories", jobs_path(category: "All Categories"))%></li>
        </ul>
      </div>
      <!--=== By Salary ====-->
      <div class="dropdown btn-group clearfix">
        <% if params[:wage].present? %>
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <%= params[:wage] %> <span class="caret"></span>
        </button>
        <% else %>
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Wages <span class="caret"></span>
        </button>
        <% end %>
        <ul class="dropdown-menu" selection aria-labelledby="dropdownMenuDivider">
          <li>
            <%= link_to("0~3k", jobs_path(:wage => "0~3k")) %>
          </li>
          <li>
            <%= link_to("3~5k", jobs_path(:wage => "3~5k")) %>
          </li>
          <li>
            <%= link_to("5~7k", jobs_path(:wage => "5~7k")) %>
          </li>
          <li>
            <%= link_to("7~10k", jobs_path(:wage => "7~10k")) %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!--=== List of Jobs ===-->
  <div class="row">
    <% if @jobs.length > 0 %>
    <% @jobs.each do |job| %>
    <div class="col-md-9 col-xs-12 job-box">
      <!--=== The info about the job ===-->
      <div class="col-md-6 col-xs-12 info">
        <div class="info-top">
          <h3><%= link_to(job.title, job_path(job), target: "_blank" )%></h3>
          <span><%= job.created_at.to_formatted_s(:long_ordinal)%></span>
        </div>
        <div class="info-mid">
          <%= job.wage_lower_bound %>
          ~
          <%= job.wage_upper_bound %>
        </div>

        <div class="info-bot">
          <span class="category"><span class="<%= job.category.icon %>"> <span style="font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif"> <%= job.category.name %></span></span>
        </div>
      </div>
      <!--===== The info about the company  -->
      <div class="col-md-6 col-xs-12 company">
        <div class="company-top">
          <span><%= link_to(job.company, job_path(job), target: "_blank")%></span>
          <% if current_user && current_user.is_member_of?(job) %>
          <%= link_to remove_job_path(job), method: :post do %>
          <span class="fa fa-star"></span>
          <% end %>
        <% else %>
          <%= link_to add_job_path(job), method: :post do %>
          <span class="fa fa-star-o"></span>
          <% end %>
        <% end %>
        </div>
        <div class="company-mid ">
          <span class="fa fa-envelope"></span>
          <span><%= job.contact_email %></span>
        </div>
        <div class="conpany-bot">
          <span class="fa fa-map-marker"></span>
          <span><%= job.location.name%></span>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <div class="col-md-9 col-xs-12 no-job-data">
      <h2>Ohps, There is no job yet.</h2>
    </div>
    <% end %>
      <!--==== Suggested Jobs  =====-->
    <div class="col-md-3 side-box">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-10 col-md-offset-1 suggest-title">
              <span class="fa fa-tags"></span><span> Recommands </span>
            </div>
            <div class="row" style="margin-left:-4rem; margin-right:-4rem;">
              <% @suggests.each do |job| %>
              <div class="col-xs-10 col-xs-offset-1 suggest-content">
                <div>
                  <h3>
                    <%= link_to job_path(job), target: "_blank" do %>
                    <%= job.title %> [<%= job.location.name %>]
                    <% end %>
                  </h3>
                </div>
                <div>
                  <p> <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound  %></p>
                </div>
                <div>
                  <span> <%= job.company %></span>
                </div>
              </div>
              <% end %>
            </div>

          </div>
        </div>

      </div>
    </div>

  </div>




</div>

<!-- The pagination -->
<div class="col-md-10 col-md-offset-1 job-bottom">
  <div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>
</div>
