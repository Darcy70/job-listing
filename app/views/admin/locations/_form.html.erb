<div class="col-md-10 col-md-offset-1">
  <hr>
  <%= simple_form_for [:admin,@location] do |f| %>
  <div>
    <%= f.input :name, label: false, placeholder: 'Job location'%>
    <hr>
    <span><%= f.input :is_hidden, label: "Hide" %></span>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit", disable_with: "Submiting", class: "button"%>
  </div>
  <% end %>
</div>
