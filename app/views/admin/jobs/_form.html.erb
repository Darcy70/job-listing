<div class="col-md-10 col-md-offset-1 job-form-content">
  <hr style="size:1rem;">
  <%= simple_form_for [:admin,@job] do |f| %>
    <div class="form-group">
      <%= f.input :title, label: false, placeholder: "Job title" %>
      <%= f.input :description, label: false, placeholder: "Job description" %>
      <%= f.input :company, label: false, placeholder: "Company name" %>
      <hr>
      <%= f.input :category_id, label: "Job's category", collection: @categorys, checked: @job.category, input_html: { class: 'category'}  %>
      <%= f.input :location_id, label: "Job's location", collection: @locations, checked: @job.location, input_html: { class: 'category'}  %>
      <%= f.input :wage_lower_bound, label: "Wage" do %>
        <%= f.input_field :wage_lower_bound, as: :integer, class: "wage" %> <span class="wage-form"> ~ </span>
        <%= f.input_field :wage_upper_bound, as: :integer, class: "wage" %><span class="wage-form"></span>
        <% end %>
        <%= f.input :contact_email, label: "Contact email", placeholder: 'User@domain.com' %>
        <hr>
        <span class="hidden-box"><%= f.input :is_hidden, label:'Hide the Job'%></span>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", disable_with: "Submiting...", class: "button" %>
    </div>
    <% end %>
</div>
