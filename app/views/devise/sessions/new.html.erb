<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2>
        <span class="fa fa-sign-in"></span>
        Sign in
      </h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-envelope fa-lg fa-fw"></i>
          </span>
          <%= f.input :email, required: true, autofocus: true, placeholder: "Your Email", label: false %>
        </div>
        <br>

        <div class="input-group ">
          <span class="input-group-addon">
            <i class="fa fa-lock fa-lg fa-fw"></i>
          </span>
          <%= f.input :password, required: true, label: false, placeholder: "Your Password"%>
        </div>

        <%= f.input :remember_me, label: "Remember me",as: :boolean if devise_mapping.rememberable? %>
        <%= link_to "Forget Password?", new_password_path(resource_name), class: "psw" %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button" %>
      </div>
      <hr>
    </div>
    <% end %>

    <div class="account">
      <%= link_to "Register Now!", new_registration_path(resource_name) %>
    </div>
  </div>
</div>

</div>
