

<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-user-circle-o"></span> Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="input-group ">
          <span class="input-group-addon">
            <i class="fa fa-envelope fa-lg fa-fw"></i>
          </span>
          <%= f.input :email, required: true, autofocus: true, placeholder: "Your Email", label: false %>
        </div>
        <br>
        <div class="input-group ">
          <span class="input-group-addon">
            <i class="fa fa-user-circle fa-lg fa-fw"></i>
          </span>
          <%= f.input :name, required: true, placeholder: "Your Name", label: false %>
        </div>
        <br>
        <%= f.input :is_admin, :label => false, as: :radio_buttons, collection:  [['Employee', false], ['Employer', true]], required: true %>
        <div class="input-group ">
          <span class="input-group-addon">
            <i class="fa fa-lock fa-lg fa-fw"></i>
          </span>
          <%= f.input :password, required: true, label: false, placeholder: "Your Password"%>
        </div>
        <br>
        <div class="input-group ">
          <span class="input-group-addon">
            <i class="fa fa-lock fa-lg fa-fw"></i>
          </span>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation"%>
        </div>

      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign Up", class: "button" %>
      </div>
          <hr>
          <div class="account">
            <%= link_to "Log in Now!", new_session_path(resource_name) %><br />
          </div>
      </div>


      <% end %>

    </div>
  </div>

</div>
