<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2>
        <span class="fa fa-share"></span>
        Forgot Password?
      </h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => false, placeholder: "Please enter your email address", error: "Email address is needed", required: true, autofocus: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Reset password", class: "button" %>

      </div>

      <% end %>
      <hr>
      <div class="account">
        <%= link_to "Log in Now", new_session_path(resource_name) %>
        <br>
        <%= link_to "Sign up Now", new_registration_path(resource_name) %>
      </div>
    </div>

  </div>

</div>
